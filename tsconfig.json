{
  "include": ["src/**/*.ts", "index.d.ts"],
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "dist",
    "lib": ["DOM"]
  },
  "lib": ["es2015"]
}
